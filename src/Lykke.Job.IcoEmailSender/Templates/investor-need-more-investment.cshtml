@model Lykke.Ico.Core.Queues.Emails.InvestorNeedMoreInvestmentMessage
@{
    Layout = "investor-layout";
}

<table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
    <!-- title -->
    <tr>
        <td align="center" style="font-family: 'Open Sans', Arial, sans-serif; font-size:36px; color:#3b3b3b; font-weight: bold; letter-spacing:4px;">Need more investment</td>
    </tr>
    <!-- end title -->
    <tr>
        <td height="35"></td>
    </tr>
    <tr>
        <td align="center">
            <table width="25" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td height="2" style="border-bottom:2px solid #fc625e;"></td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td height="35"></td>
    </tr>
    <!-- content -->
    <tr>
        <td align="center" style="font-family: 'Open Sans', Arial, sans-serif; font-size:24px; color:#7f8c8d; line-height:30px;">
            <p>
                The minimum total amount to invest is $@Model.MinAmount. The amount you invested so far is $@Model.InvestedAmount.
            </p>
            <p>
                You can invest more or request refund.
            </p>
        </td>
    </tr>
    <!-- end content -->
</table>